<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin_wisdom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/question_card_background"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingStart="@dimen/card_padding"
                android:paddingEnd="@dimen/card_end"
                android:textSize="@dimen/text_size_wisdom_title"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:paddingStart="@dimen/card_padding"
                android:paddingEnd="@dimen/card_end"
                android:textSize="@dimen/text_size_wisdom_question"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            tools:ignore="UseCompoundDrawables">
           <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_margin="@dimen/card_margin"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_margin"
                    android:layout_marginEnd="@dimen/card_margin"
                    android:layout_marginStart="@dimen/card_margin"
                    android:text="@string/delete"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/reply"
                    android:textStyle="bold"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_margin"
                    android:layout_marginEnd="@dimen/card_margin"
                    android:layout_marginStart="@dimen/card_margin"
                    android:layout_gravity="center|top"
                    android:text="@string/answer"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/reply"
                    android:textStyle="bold"
                    android:visibility="visible"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/askingPersonImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/your_image"/>
                <TextView
                    android:id="@+id/askingPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/card_margin"
                    android:textColor="@color/link_color"/>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/replyView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginEnd="@dimen/card_margin"
                    android:background="@drawable/reply_edit_text_background"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/replyEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_weight="1"
                        android:padding="@dimen/reply_edit_text_padding"
                        android:maxHeight="@dimen/max_height"
                        android:background="@drawable/send_button"
                        android:drawableEnd="@drawable/send"
                        android:hint="@string/reply_question"
                        android:inputType="textMultiLine"
                        android:autofillHints="@string/reply_question" />
                </LinearLayout>
            </FrameLayout>
            <TextView
                android:id="@+id/replyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/reply_margin"
                android:textColor="@android:color/white"
                android:layout_marginEnd="@dimen/end_margin"
                android:layout_marginBottom="@dimen/end_margin"
                android:singleLine="true"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>