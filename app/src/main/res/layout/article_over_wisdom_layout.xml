<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wisdom_card_background"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/articleCircleImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/wisdom_card_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/articleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_wisdom_title"
                    android:layout_margin="@dimen/article_margin"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/articleDescription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/article_margin"
                    android:layout_marginStart="@dimen/article_margin"
                    android:layout_marginEnd="@dimen/article_margin"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_wisdom_description"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>