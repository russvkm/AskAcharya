<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ArticleDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/card_margin_wisdom">

        <ImageView
            android:id="@+id/articleImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/wisdom"/>
        <TextView
            android:id="@+id/fullArticleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/question_card_outline"
            android:layout_marginBottom="@dimen/article_bottom_margin"
            android:textSize="@dimen/text_size_wisdom_title"/>
    </LinearLayout>
</ScrollView>